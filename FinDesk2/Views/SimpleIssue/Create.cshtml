@model SimpleIssueViewModel

@{
    ViewData["Title"] = "Новый Запрос";
}

<div class="container">
    <h2>View</h2>

    <h4>Issue</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" class="form-control" />

                <div class="form-group">
                    <label asp-for="User" class="control-label"></label>
                    <input asp-for="User" class="form-control" readonly value="@User.Identity.Name" />
                    <span asp-validation-for="User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LongDescr" class="control-label"></label>
                    <input asp-for="LongDescr" class="form-control" />
                    <span asp-validation-for="LongDescr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="SolveDescr" class="control-label"></label>*@
                    <input asp-for="SolveDescr" type="hidden" class="form-control" />
                    @*<span asp-validation-for="SolveDescr" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Requests List</a>
    </div>

</div>

